					console<<"Ошибка обращения к ИП"<<endl;
				}
			}else{
				console<<"-- Error: Типы параметров не соответствует сигнатуре функции set_voltage()"<<endl;
				stop	= true;
			}

		}else if(count == 2){

			if(lua_isnumber(lvm,1) && lua_isnumber(lvm,2)){

				i32	   index	= lua_tonumber(lvm,1);
				double current 	= lua_tonumber(lvm,2);
				bool   res 		= psu->set_current(index, current);

					access_event(res);
				if(res){
					console<<"-- На канале" + IntToStr(index) + " установлено напряжение : " + FloatToStr(current) + "В"<<endl;
				}else{
					console<<"Ошибка обращения к ИП"<<endl;
				}
			}else{
				console<<"-- Error: Типы параметров не соответствует сигнатуре функции set_voltage()"<<endl;
				stop	= true;
			}

		}else{
			console<<"Error: Количество параметров не соответствует сигнатуре функции hi()"<<endl;
			stop	= true;
		}

	}catch(...){;}

	Application->ProcessMessages();
	if(stop)	return Return(lvm);
	return 1;
};

//-------------------------------------
int 	get_voltage(lua_State*	lvm){

	try{
		int count = lua_gettop(lvm);

		if(count == 1){

			if(lua_isnumber(lvm,1)){
				int	num		= lua_tointeger(lvm,1);
				double U	= 0;
				bool res	= psu->get_voltage(num, U);
				access_event(res);

				if(res){
					lua_pushnumber(lvm,U);
				}else{
					console<<"Ошибка обращения к ИП"<<endl;
				}

			}else{
				console<<"-- Error: Типы параметров не соответствует сигнатуре функции get_voltage()"<<endl;
				stop	= true;
			}
		}else{
			console<<"Error: Количество параметров не соответствует сигнатуре функции get_voltage()"<<endl;
			stop	= true;
		}

	}catch(...){};

	Application->ProcessMessages();
	if(stop)	return Return(lvm);
	return 1;
};

