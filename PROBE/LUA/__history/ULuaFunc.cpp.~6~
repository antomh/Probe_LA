//-------------------------------------
int 	enable(lua_State*	lvm){

	try{
		int count = lua_gettop(lvm);

		if(count == 0){

			bool res = true;
			res = res && psu->enable(1);
			res = res && psu->enable(2);
			res = res && psu->enable(3);
			res = res && psu->enable(4);

			if(!res){
				console<<"Ошибка обращения к ИП"<<endl;
			}

		}else if(count == 1){

			if(lua_isnumber(lvm,1)){
				int	num		= lua_tointeger(lvm,1);
				double I	= 0;
				bool res	= psu->enable(num);
				access_event(res);

				if(res){
					console<<"Ошибка обращения к ИП"<<endl;
				}

			}else{
				console<<"-- Error: Типы параметров не соответствует сигнатуре функции get_current()"<<endl;
				stop	= true;
			}
		}else{
			console<<"Error: Количество параметров не соответствует сигнатуре функции get_current()"<<endl;
			stop	= true;
		}

	}catch(...){};

	Application->ProcessMessages();
	if(stop)	return Return(lvm);
	return 1;
};

